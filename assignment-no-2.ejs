<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    <link rel="stylesheet" href="/css/assignment-no-2.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <header>
            <h1>Expense Tracker</h1>
            <a href="/report" class="report-btn">View Report</a>
        </header>

        <div class="expense-form">
            <h2>Add New Expense</h2>
            <form id="expenseForm">
                <div class="form-group">
                    <input type="text" id="description" name="description" placeholder="Description" required>
                </div>
                <div class="form-group">
                    <input type="number" id="amount" name="amount" placeholder="Amount" step="0.01" required>
                </div>
                <button type="submit" class="add-btn">Add Expense</button>
            </form>
        </div>

        <div class="expenses-list">
            <h2>Expenses</h2>
            <div id="expensesList">
                <% expenses.forEach(expense => { %>
                    <div class="expense-item" data-id="<%= expense._id %>">
                        <div class="expense-info">
                            <span class="description"><%= expense.description %></span>
                            <span class="amount">$<%= expense.amount.toFixed(2) %></span>
                            <span class="date"><%= new Date(expense.date).toLocaleDateString() %></span>
                        </div>
                        <div class="expense-actions">
                            <button class="edit-btn" onclick="editExpense('<%= expense._id %>')">Edit</button>
                            <button class="delete-btn" onclick="deleteExpense('<%= expense._id %>')">Delete</button>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Edit Expense</h2>
            <form id="editForm">
                <input type="hidden" id="editId">
                <div class="form-group">
                    <input type="text" id="editDescription" name="description" required>
                </div>
                <div class="form-group">
                    <input type="number" id="editAmount" name="amount" step="0.01" required>
                </div>
                <button type="submit" class="save-btn">Save Changes</button>
            </form>
        </div>
    </div>

    <script src="/js/assignment-no-2.js"></script>
</body>
</html>
